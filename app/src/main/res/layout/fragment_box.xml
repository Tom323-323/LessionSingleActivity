<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/box_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/light_green"
    tools:context="com.lost.weaponsapp.BoxFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="This is a BOX!"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="go back"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/openSecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="open secret"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/goBack"
        app:layout_constraintStart_toStartOf="@+id/goBack"
        app:layout_constraintTop_toBottomOf="@+id/goBack" />

    <Button
        android:id="@+id/generateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="generate number"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/openSecret"
        app:layout_constraintStart_toStartOf="@+id/openSecret"
        app:layout_constraintTop_toBottomOf="@+id/openSecret" />
</androidx.constraintlayout.widget.ConstraintLayout>